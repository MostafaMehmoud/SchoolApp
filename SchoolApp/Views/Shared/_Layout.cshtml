    <style>
        body {
            height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background: #343a40;
            color: white;
            height: max-content;
            min-height: calc(100vh);
            position: absolute;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px;
                display: block;
            }

                .sidebar a:hover {
                    background: #495057;
                }

        .content {
            margin-right: 250px;
            flex-grow: 1;
            padding: 20px;
        }

        .submenu {
            display: none;
            list-style: none;
            padding-left: 20px;
        }

            .submenu.show {
                display: block;
            }

        .logo {
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
        }
        @@media (max-width: 768px) {
            .sidebar

        {
            width: 100px;
            text-align: center;
        }

        .content {
            margin-right: 100px;
        }

        .sidebar a span {
            display: none;
        }

        .submenu {
            padding-left: 0;
        }

        }
    </style>
</head>

