            let printContent = document.getElementById(`student-${studentId}`).innerHTML;
            let originalContent = document.body.innerHTML;

            // إزالة الأزرار غير الضرورية
            printContent = printContent.replace(/<button[^>]*>.*?<\/button>/g, "");
