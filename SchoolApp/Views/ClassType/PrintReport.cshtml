@using SchoolApp.DAL.Models
@using SchoolApp.DAL.ViewModels
@model ReportClassType
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>طباعة تفاصيل الباص</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            direction: rtl;
            margin: 20px;
        }

        .container {
            width: 80%;
            margin: auto;
            padding: 20px;
            border: 1px solid #000;
            border-radius: 10px;
        }

        .logo {
            width: 150px;
            margin-bottom: 20px;
        }

        .details {
            text-align: right;
            margin-top: 20px;
        }

            .details p {
                font-size: 18px;
                margin: 5px 0;
            }
    </style>
</head>
<body onload="window.print(); setTimeout(() => window.close(), 500);">

    <!-- Logo -->
    <img class="logo" src="~/images/download.jpg" alt="School Logo">

    <div class="container">
        <h2>تفاصيل المرحلة</h2>

        <div class="details">
            <p><strong>اسم المرحلة:</strong> @Model.StageName</p>
            <p><strong>اسم السنة:</strong> @Model.ClassTypeName</p>
            <p><strong>مصاريف السنة:</strong> @Model.PriceClassType.ToString("0.00")</p>
            <p><strong>عدد الاقساط:</strong> @Model.NumberOfInstallments</p>
            <p><strong>سعر القسط:</strong> @Model.PriceInstallment.ToString("0.00")</p>
            <p><strong>سعر الباكليت:</strong> @Model.CLSBakelite.ToString("0.00")</p>
            <p><strong>سعر الزي:</strong> @Model.CLSCloth.ToString("0.00")</p>
            <p><strong>سعر الكتب:</strong> @Model.CLSAcpt.ToString("0.00")</p>
            <p><strong>سعر التسجيل:</strong> @Model.CLSRegs.ToString("0.00")</p>
            <p><strong>المجموع الكلي:</strong> @Model.TotalAmountClassType.ToString("0.00")</p>
        </div>
    </div>

</body>
</html>
