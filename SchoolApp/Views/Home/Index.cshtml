@using SchoolApp.DAL.ViewModels
@{
    ViewData["Title"] = "لوحة التحكم";
}
@model SchoolDashboardViewModel
<!-- استخدم التنسيق الذي تحدثنا عنه في الرد السابق -->
@if (User.Identity.IsAuthenticated)
{


<h2 class="text-center mb-4">لوحة تحكم المدرسة</h2>

<div class="row g-4">

    <div class="col-md-4">
        <div class="card shadow text-center bg-light">
            <div class="card-body">
                <h5 class="card-title">عدد الطلاب</h5>
                <p class="display-6">@Model.TotalStudents</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow text-center bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">إجمالي الرسوم</h5>
                <p class="display-6">@Model.TotalFees.ToString("N2") ريال</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow text-center bg-warning">
            <div class="card-body">
                <h5 class="card-title">المتبقي على الطلاب</h5>
                <p class="display-6">@Model.RemainingAmount.ToString("N2") ريال</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow text-center bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">عدد الباصات</h5>
                <p class="display-6">@Model.TotalBuses</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow text-center bg-danger text-white">
            <div class="card-body">
                <h5 class="card-title">إجمالي المصروفات</h5>
                <p class="display-6">@Model.TotalExpenses.ToString("N2") ريال</p>
            </div>
        </div>
    </div>

</div>
}
else
{
	<div class="alert alert-info text-center">
		<h2>Welcome to the School Management System</h2>
		<p>Please log in to access your dashboard.</p>
	</div>
}
