@using SchoolApp.DAL.ViewModels
@model PrintViewModel<PrintStudentDetails>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
  
   <style>
    @@media print {
        @@page {
            size: A4 portrait;
            margin: 15mm;
        }

        body {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
            margin: 0;
            padding: 0;
        }

        .btn-print {
            display: none !important;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }
    }

    body {
        font-family: 'Cairo', 'Arial', sans-serif;
        line-height: 1.8;
        direction: rtl;
        background-color: white;
        margin: 0;
        padding: 0;
    }

    .contract-container {
        max-width: 800px;
        margin: auto;
        padding: 20px 30px;
        border: 1px solid #000;
        background-color: white;
    }

    .centered {
        text-align: center;
    }

    .logo {
        max-height: 80px;
        display: block;
        margin: 0 auto 10px;
    }

    .section-title {
        font-weight: bold;
        text-decoration: underline;
        margin-top: 20px;
        text-align: center;
        font-size: 17px;
    }

    .field {
        margin: 10px 0;
        font-size: 15px;
    }

    .signature-area {
        margin-top: 30px;
        display: flex;
        justify-content: space-between;
    }

    .signature-box {
        width: 45%;
        text-align: center;
    }

    .btn-print {
        background-color: #28a745;
        color: white;
        padding: 8px 20px;
        border: none;
        font-size: 15px;
        margin: 15px auto;
        cursor: pointer;
        display: block;
    }
</style>


</head>
<body>

    

    <div class="contract-container">
        @* شعار الشركة *@
        @if (Model.Company?.Logo != null)
        {
            var logoBase64 = Convert.ToBase64String(Model.Company.Logo);
            <img src="data:image/png;base64,@logoBase64" class="logo" alt="شعار المدرسة" />
        }

        <div class="centered">
            <h2>عقد اتفاق تسديد رسوم دراسية</h2>
            <strong>@Model.Company.CompanyName</strong><br />
            هاتف: @Model.Company.CompanyPhoneNumber | إيميل: @Model.Company.CompanyEmail<br />
            العنوان: @Model.Company.CityAddress - @Model.Company.AreaAddress
        </div>

        <div class="field"><strong>اسم الطالب:</strong> @Model.model.StudentName</div>
        <div class="field"><strong>المرحلة الدراسية:</strong> @Model.model.Stage</div>
        <div class="field"><strong>الصف:</strong> @Model.model.Level</div>
        <div class="field"><strong>القسط الشهري:</strong> @Model.model.Fees ريال</div>
        <div class="field"><strong> ضريبة القيمة المضافة:</strong> @Model.model.Payment ريال</div>
        <div class="field"><strong>الباص:</strong> @Model.model.BusType</div>
        <div class="field"><strong>مدة الالتحاق:</strong> @Model.model.Term</div>

        <div class="section-title">تعهد وإقرار</div>
        <p>
            أتعهد أنا الموقع أدناه، ولي أمر الطالب، بأنني اطلعت على نظام الشركة في الرسوم الدراسية
            وأوافق على جميع الشروط، وأتعهد بالالتزام بها.
        </p>

        <div class="field"><strong>اسم ولي الأمر:</strong> @Model.model.Guardian</div>
        <div class="field"><strong>صلة القرابة:</strong> @Model.model.Relation</div>
        <div class="field"><strong>عنوان العمل:</strong> @Model.model.WorkAddress</div>
        <div class="field"><strong>عنوان المنزل:</strong> @Model.model.HomeAddress</div>
        <div class="field"><strong>رقم الجوال:</strong> @Model.model.Phone</div>
        <div class="field"><strong>التاريخ:</strong> @Model.model.date.ToString("yyyy-MM-dd")</div>

        <div class="signature-area">
            <div class="signature-box">
                
                توقيع ولي الأمر
                <div style="border-bottom: 1px dashed #000; width: 80%; margin: 0 auto 5px;"></div>
            </div>
            <div class="signature-box">
               
                توقيع مدير عام الشركة
                <div style="border-bottom: 1px dashed #000; width: 80%; margin: 0 auto 5px;"></div>
            </div>
        </div>

    </div>

</body>
</html>
<script>
    window.onload = function () {
        window.print();
    };

    window.onafterprint = function () {
        window.location.href = '/Student/Index'; // عدّل حسب الحاجة
    };
</script>
